extends layout

block scripts
  script(src="/javascripts/jquery-3.3.1.min.js")
  script(src="/javascripts/echarts.common.min.js")
  script(src="/javascripts/section4.js")

block content
  h2 Welcome to Section4 page

  h3 Text Area: ECharts Samples, Upload file and JSON, CSV, XLSX file export.

  table(width="770")
    tr 
      td
        button(id="btnA", class="button button--wayra button--border-thick button--text-upper button--size-s", style="width: 230px; height: 70px; cursor: pointer") ECharts Client Side Sample
      td
        button(id="btnB", class="button button--wayra button--border-thick button--text-upper button--size-s", style="width: 230px; height: 70px; cursor: pointer") Upload File Test
      td
        button(id="btnC", class="button button--wayra button--border-thick button--text-upper button--size-s", style="width: 230px; height: 70px; cursor: pointer") Export File Test
    tr
      td
        | Chart Type: &nbsp;
        select(id="ec_type")
          option(value="hbar") Horizental Bar Chart
          option(value="vbar") Vertical Bar Chart
          option(value="pie") Pie Chart
      td
      td
    tr
      td(colspan="3", width="100%", height="360", valign="top")
        hr
        div(id="ecPanel_vbar", style="width:100%; height:360px", hidden="true") There's an ECharts VBar Panel.
        div(id="ecPanel_hbar", style="width:100%; height:360px", hidden="true") There's an ECharts HBar Panel.
        div(id="ecPanel_pie", style="width:100%; height:360px", hidden="true") There's an ECharts Pie Panel.
        div(id="uploadPanel", style="width:100%; height:500px", hidden="true") 
          iframe(src="/upload/form", name="frameUpload", id="frameUpload", width="100%" height="100%")
        div(id="exportPanel", style="width:100%; height:500px", hidden="true") 
          iframe(src="/export", name="frameExport", id="frameExport", width="100%" height="100%")